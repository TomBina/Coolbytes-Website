<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <rule name="Robots" stopProcessing="true">
          <match url="robots.txt" />
          <action type="Rewrite" url="robots.txt" />
        </rule>
        <rule name="CoolBytes App">
          <match url=".*" />
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

  </system.webServer>
</configuration>